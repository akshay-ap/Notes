<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.insighters.ash.note_maker.NoteMaker.more_info">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="About NoteMaker"
        android:id="@+id/textView_about_note_maker"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="NoteMaker is a simple application build for keeping note snippets of day to day events. The app is extremly easy to use. Hope you will enjoy using this app!!!"
        android:id="@+id/textView_about_notemaker_value"
        android:layout_below="@+id/textView_about_notemaker"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Key Features"
        android:id="@+id/textView4"
        android:layout_below="@+id/textView_about_notemaker_value"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="1.Easy to Use\n2.No login needed\n3.Works without Internet access"
        android:id="@+id/textView5"
        android:layout_below="@+id/textView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Version Code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_version_code" />

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView_version_value" />
    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="30sp" />
    <Button
        android:text="Share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button_share"
        android:background="@drawable/button_main_menu"
        android:onClick="click_share" />
    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="30sp" />
    <Button
        android:text="RATE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button_rate"
        android:onClick="click_rate"
        android:background="@drawable/button_main_menu" />

    <android.support.v4.widget.Space
    android:layout_width="match_parent"
    android:layout_height="30sp" />
    <com.google.android.gms.ads.AdView
        android:id="@+id/adView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id">
    </com.google.android.gms.ads.AdView>
</LinearLayout>
